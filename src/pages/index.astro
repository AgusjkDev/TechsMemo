---
import App from "components/app.svelte";

import "styles/globals.css";

import techs from "data/techs";
---

<html lang="en">
    <head>
        <base href="/" />
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta
            name="description"
            content="TechsMemo is a basic memory game with a pool of +75 possible technologies and a very comfortable playground with a simple UI/UX design."
        />
        <meta
            name="keywords"
            content="Memory Game, Technology, Coding, Programming, Web Development, Gaming"
        />
        <meta name="author" content="Agustín Arnoldi" />
        <meta name="copyright" content="Agustín Arnoldi" />
        <meta name="reply-to" content="agusjkdev7@gmail.com" />
        <meta name="robots" content="index, nofollow" />
        <meta property="og:type" content="website" />
        <meta property="og:title" content="TechsMemo" />
        <meta
            property="og:description"
            content="TechsMemo is a basic memory game with a pool of +75 possible technologies and a very comfortable playground with a simple UI/UX design."
        />
        <meta
            property="og:image"
            content="https://github.com/AgusjkDev/TechsMemo/blob/main/.github/preview.png?raw=true"
        />
        <meta property="og:url" content="https://techsmemo.vercel.app" />
        <meta property="og:locale" content="en_US" />
        <meta property="og:site_name" content="TechsMemo" />
        <meta name="twitter:card" content="summary" />
        <meta name="twitter:title" content="TechsMemo" />
        <meta
            name="twitter:description"
            content="TechsMemo is a basic memory game with a pool of +75 possible technologies and a very comfortable playground with a simple UI/UX design."
        />
        <meta
            name="twitter:image"
            content="https://github.com/AgusjkDev/TechsMemo/blob/main/.github/preview.png?raw=true"
        />
        <meta name="twitter:site" content="@agusjkdev" />
        <meta name="twitter:creator" content="https://techsmemo.vercel.app" />
        <link rel="canonical" href="https://techsmemo.vercel.app" />
        <link rel="made" href="mailto:agusjkdev7@gmail.com" />
        <meta name="generator" content={Astro.generator} />
        <link rel="apple-touch-icon" sizes="76x76" href="imgs/favicon/apple-touch-icon.png" />
        <link rel="icon" type="image/png" sizes="32x32" href="imgs/favicon/favicon-32x32.png" />
        <link rel="icon" type="image/png" sizes="16x16" href="imgs/favicon/favicon-16x16.png" />
        <link rel="manifest" href="imgs/favicon/site.webmanifest" />
        <link rel="mask-icon" href="imgs/favicon/safari-pinned-tab.svg" color="#182438" />
        <link rel="shortcut icon" href="imgs/favicon/favicon.ico" />
        <meta name="msapplication-TileColor" content="#182438" />
        <meta name="msapplication-config" content="imgs/favicon/browserconfig.xml" />
        <meta name="theme-color" content="#ffffff" />
        <title>TechsMemo</title>
        {techs.map(tech => <link rel="preload" as="image" href={`/imgs/techs/${tech}.svg`} />)}
    </head>

    <body class="bg-slate-950 text-white">
        <App client:visible />
    </body>
</html>
